<sxs>
    <scene root="root" axis_length="1"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="50" y="25" z="50" />
            <to x="0" y="25" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="spacestationArmTransformation">
            <translate x="0.75" y="-0.075" z="-0.075" />
            <scale x="2.5" y="0.15" z="0.15" />
        </transformation>
        <transformation id="spacestationStemPanelTransformation">
                <translate x="0" y="0.075" z="1.75" />
                <rotate axis="x" angle="-90" />
                <scale x="2" y="0.75" z="1" />
        </transformation>
        <transformation id="spacestationMainMirrorSupportTransformation">
            <translate x="0" y="0" z="0.3" />
            <rotate axis="x" angle="-40" />
            <scale x="0.15" y="0.15" z="2.25" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="spacestationBody">
            <torus inner="0.5" outer="3.5" slices="50" loops="50" />
        </primitive>
        <primitive id="spacestationCenter">
            <cylinder top="0.5" base="1.25" height="1" slices="50" stacks="50" />
        </primitive>
        <primitive id="square">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="spacestation" />
            </children>
        </component>

        <!-- ============ -->
        <!-- Spacestation -->
        <component id="spacestation">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="spacestationBody" />
                <componentref id="spacestationCenterComponent" />
                <componentref id="spacestationStem" />
                <componentref id="spacestationArm1" />
                <componentref id="spacestationArm2" />
                <componentref id="spacestationArm3" />
                <componentref id="spacestationArm4" />
                <componentref id="spacestationArm5" />
                <componentref id="spacestationArm6" />
            </children>
        </component>

        <!-- Center component -->
        <component id="spacestationCenterComponent">
            <transformation>
                <translate x="0" y="0" z="-0.5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="spacestationCenter" />
            </children>
        </component>

        <!-- Stem -->
        <component id="spacestationStem">
            <transformation>
                <translate x="-0.075" y="-0.075" z="-5.5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="spacestationStemTube" />
                <componentref id="spacestationStemPanel1" />
                <componentref id="spacestationStemPanel2" />
                <componentref id="spacestationStemPanel3" />
                <componentref id="spacestationStemTail" />
                <componentref id="spacestationMainMirror" />
            </children>
        </component>
        <component id="spacestationStemTube">
            <transformation>
                <scale x="0.15" y="0.15" z="8" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cube" />
            </children>
        </component>
        <component id="spacestationStemTail">
            <transformation>
                <translate x="-0.125" y="-0.125" z="0" />
                <scale x="0.4" y="0.4" z="0.4" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cube" />
            </children>
        </component>
        <component id="spacestationStemPanel1">
            <transformation>
                <transformationref id="spacestationStemPanelTransformation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <component id="spacestationStemPanel2">
            <transformation>
                <translate x="0" y="0" z="1.25" />
                <scale x="1.4" y="1" z="1" />
                <transformationref id="spacestationStemPanelTransformation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <component id="spacestationStemPanel3">
            <transformation>
                <translate x="0" y="0" z="2.5" />
                <scale x="1.9" y="1" z="1" />
                <transformationref id="spacestationStemPanelTransformation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <!-- Main Mirror -->
        <component id="spacestationMainMirror">
            <transformation>
                <translate x="0" y="0" z="6.75" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="spacestationMainMirrorPanel" />
                <componentref id="spacestationMainMirrorStemArticulation" />
                <componentref id="spacestationMainMirrorSupport1" />
                <componentref id="spacestationMainMirrorSupport2" />
            </children>
        </component>
        <component id="spacestationMainMirrorPanel">
            <transformation>
                <translate x="-1.175" y="0.7" z="2.5" />
                <rotate axis="x" angle="-40" />
                <scale x="2.5" y="2.5" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <component id="spacestationMainMirrorStemArticulation">
            <transformation>
                <translate x="-0.125" y="-0.125" z="0" />
                <scale x="0.4" y="0.4" z="0.7" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cube" />
            </children>
        </component>
        <component id="spacestationMainMirrorSupport1">
            <transformation>
                <rotate axis="y" angle="-30" />
                <transformationref id="spacestationMainMirrorSupportTransformation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cube" />
            </children>
        </component>
        <component id="spacestationMainMirrorSupport2">
            <transformation>
                <rotate axis="y" angle="30" />
                <transformationref id="spacestationMainMirrorSupportTransformation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cube" />
            </children>
        </component>


        <!-- Arms -->
        <component id="spacestationArm1">
            <transformation>
                <transformationref id="spacestationArmTransformation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cube" />
            </children>
        </component>
        <component id="spacestationArm2">
            <transformation>
                <rotate axis="z" angle="60" />
                <transformationref id="spacestationArmTransformation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cube" />
            </children>
        </component>
        <component id="spacestationArm3">
            <transformation>
                <rotate axis="z" angle="120" />
                <transformationref id="spacestationArmTransformation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cube" />
            </children>
        </component>
        <component id="spacestationArm4">
            <transformation>
                <rotate axis="z" angle="180" />
                <transformationref id="spacestationArmTransformation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cube" />
            </children>
        </component>
        <component id="spacestationArm5">
            <transformation>
                <rotate axis="z" angle="240" />
                <transformationref id="spacestationArmTransformation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cube" />
            </children>
        </component>
        <component id="spacestationArm6">
            <transformation>
                <rotate axis="z" angle="300" />
                <transformationref id="spacestationArmTransformation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cube" />
            </children>
        </component>

        <!-- ============ -->
        <!-- Cube -->
        <component id="cube">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cubeFace1" />
                <componentref id="cubeFace2" />
                <componentref id="cubeFace3" />
                <componentref id="cubeFace4" />
                <componentref id="cubeFace5" />
                <componentref id="cubeFace6" />
            </children>
        </component>
        <component id="cubeFace1">
            <transformation>
                <translate x="1" y="0" z="0" />
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <component id="cubeFace2">
            <transformation>
                <translate x="1" y="1" z="0" />
                <rotate axis="x" angle="-90" />
                <rotate axis="z" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <component id="cubeFace3">
            <transformation>
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <component id="cubeFace4">
            <transformation>
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <component id="cubeFace5">
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <component id="cubeFace6">
            <transformation>
                <translate x="1" y="0" z="1" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>
    </components>
</sxs>