            <materials>
                <material id="demoMaterialR" />
                <material id="demoMaterialG" />
                <material id="demoMaterialB" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cube" />
            </children>
        </component>
        <component id="spacestationStemPanel1">
            <transformation>
                <transformationref id="spacestationStemPanelTransformation" />
            </transformation>
            <materials>
                <material id="demoMaterialR" />
                <material id="demoMaterialG" />
                <material id="demoMaterialB" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <component id="spacestationStemPanel2">
            <transformation>
                <translate x="0" y="0" z="1.25" />
                <scale x="1.4" y="1" z="1" />
                <transformationref id="spacestationStemPanelTransformation" />
            </transformation>
            <materials>
                <material id="demoMaterialR" />
                <material id="demoMaterialG" />
                <material id="demoMaterialB" />
            </materials>
            <texture id="demoTexture"/>
            <children>
