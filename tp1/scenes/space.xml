        <!-- ============ -->
        <!-- Cube -->
        <component id="cube">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterialR" />
                <material id="demoMaterialG" />
                <material id="demoMaterialB" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cubeFace1" />
                <componentref id="cubeFace2" />
                <componentref id="cubeFace3" />
                <componentref id="cubeFace4" />
                <componentref id="cubeFace5" />
                <componentref id="cubeFace6" />
            </children>
        </component>
        <component id="cubeFace1">
            <transformation>
                <translate x="1" y="0" z="0" />
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
