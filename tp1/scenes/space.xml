<sxs>
    <scene root="root" axis_length="6"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="50" y="25" z="50" />
            <to x="0" y="25" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.15" g="0.15" b="0.15" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="500" y="-35" z="3" w="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
    </textures>

    <materials>
        <material id="demoMaterialR" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="demoMaterialG" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="1.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.6" b="0.0" a="1.0" />
            <specular r="0.0" g="0.6" b="0.0" a="1.0" />
        </material>
        <material id="demoMaterialB" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="1.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.6" a="1.0" />
            <specular r="0.0" g="0.0" b="0.6" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="spacestationArmTransformation">
            <translate x="0.75" y="-0.075" z="-0.075" />
            <scale x="2.5" y="0.15" z="0.15" />
        </transformation>
        <transformation id="spacestationStemPanelTransformation">
                <translate x="0" y="0.075" z="1.75" />
                <rotate axis="x" angle="-90" />
                <scale x="2" y="0.75" z="1" />
        </transformation>
        <transformation id="spacestationMainMirrorSupportTransformation">
            <translate x="0" y="0" z="0.3" />
            <rotate axis="x" angle="-40" />
            <scale x="0.15" y="0.15" z="2.25" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="spacestationBody">
            <torus inner="0.5" outer="3.5" slices="50" loops="50" />
        </primitive>
        <primitive id="spacestationCenter">
            <cylinder top="0.5" base="1.25" height="1" slices="50" stacks="50" />
        </primitive>
        <primitive id="square">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" slices="50" stacks="50" />
        </primitive>
        <primitive id="equilateralTriangle">
            <triangle x1="0" y1="0" z1="0" 
                      x2="1" y2="0" z2="0"
                      x3="0.5" y3="0.86602540378" z3="0" />
                                            />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterialR" />
                <material id="demoMaterialG" />
                <material id="demoMaterialB" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="spacestation" />
                <componentref id="sun" />
                <componentref id="earth" />
            </children>
        </component>

        <!-- ============ -->
        <!-- Sun & Planets -->
        <component id="sun">
            <transformation>
                <translate x="500" y="-35" z="3" />
                <scale x="30" y="30" z="30" />
            </transformation>
            <materials>
                <material id="demoMaterialG" />
                <material id="demoMaterialB" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>
        <component id="earth">
            <transformation>
                <translate x="-20" y="-30" z="-25" />
                <scale x="30" y="30" z="30" />
            </transformation>
            <materials>
                <material id="demoMaterialB" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>

        <!-- ============ -->
        <!-- Spacestation -->
        <component id="spacestation">
            <transformation>
                <rotate axis="z" angle="10" />
                <rotate axis="y" angle="-120" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterialR" />
                <material id="demoMaterialG" />
                <material id="demoMaterialB" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="spacestationBody" />
                <componentref id="spacestationCenterComponent" />
                <componentref id="spacestationStem" />
                <componentref id="spacestationArm1" />
                <componentref id="spacestationArm2" />
                <componentref id="spacestationArm3" />
                <componentref id="spacestationArm4" />
                <componentref id="spacestationArm5" />
                <componentref id="spacestationArm6" />
            </children>
        </component>

        <!-- Center component -->
        <component id="spacestationCenterComponent">
            <transformation>
                <translate x="0" y="0" z="-0.5" />
            </transformation>
            <materials>
                <material id="demoMaterialR" />
                <material id="demoMaterialG" />
                <material id="demoMaterialB" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="spacestationCenter" />
            </children>
        </component>

        <!-- Stem -->
        <component id="spacestationStem">
            <transformation>
                <translate x="-0.075" y="-0.075" z="-5.5" />
            </transformation>
            <materials>
                <material id="demoMaterialR" />
                <material id="demoMaterialG" />
                <material id="demoMaterialB" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="spacestationStemTube" />
                <componentref id="spacestationStemPanel1" />
                <componentref id="spacestationStemPanel2" />
                <componentref id="spacestationStemPanel3" />
                <componentref id="spacestationStemTail" />
                <componentref id="spacestationMainMirror" />
            </children>
        </component>
        <component id="spacestationStemTube">
            <transformation>
                <scale x="0.15" y="0.15" z="8" />
            </transformation>
            <materials>
                <material id="demoMaterialR" />
                <material id="demoMaterialG" />
                <material id="demoMaterialB" />
            </materials>
            <texture id="demoTexture"/>
