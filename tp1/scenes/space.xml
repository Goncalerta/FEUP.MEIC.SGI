        </component>
        <component id="spacestationStemPanel3">
            <transformation>
                <translate x="0" y="0" z="2.5" />
                <scale x="1.9" y="1" z="1" />
                <transformationref id="spacestationStemPanelTransformation" />
            </transformation>
            <materials>
                <material id="demoMaterialR" />
                <material id="demoMaterialG" />
                <material id="demoMaterialB" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <!-- Main Mirror -->
        <component id="spacestationMainMirror">
            <transformation>
                <translate x="0" y="0" z="6.75" />
            </transformation>
            <materials>
                <material id="demoMaterialR" />
                <material id="demoMaterialG" />
                <material id="demoMaterialB" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="spacestationMainMirrorPanel" />
