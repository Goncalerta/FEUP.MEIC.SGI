<sxs>
    <scene root="root" axis_length="0.5"/>

    <views default="satelliteOverEarth">
        <perspective id="backEarth" near="0.1" far="5000" angle="22.9">
            <from x="-250" y="-40" z="-80" />
            <to x="0" y="-30" z="0" />
        </perspective>

        <perspective id="milkyWay" near="0.1" far="5000" angle="30">
            <from x="0" y="7" z="-50" />
            <to x="0" y="7" z="0" />
        </perspective>

        <perspective id="moonView" near="0.1" far="5000" angle="45">
            <from x="-65" y="-65" z="-130" />
            <to x="0" y="0" z="0" />
        </perspective>
        <perspective id="lightspeed" near="0.1" far="5000" angle="179">
            <from x="0" y="-130" z="40" />
            <to x="25" y="20" z="20" />
        </perspective>

        <ortho id="orthoMoon" near="0.1" far="5000" left="-20" right="20" top="10" bottom="-10" >
            <from x="30" y="30" z="30" />
            <to x="0" y="0" z="-17" />
            <up x="1" y="1" z="0" />
         </ortho>

         <perspective id="satelliteOverEarth" near="0.1" far="5000" angle="22.9">
            <from x="30" y="30" z="30" />
            <to x="0" y="0" z="0" />
        </perspective>

        <perspective id="satelliteMainPanel" near="0.1" far="5000" angle="22.9">
            <from x="15" y="20" z="0" />
            <to x="0" y="0" z="0" />
        </perspective>
        <perspective id="satelliteMainPanelBack" near="0.1" far="5000" angle="60">
            <from x="-2" y="0.5" z="0" />
            <to x="0" y="1.5" z="0" />
        </perspective>

        <perspective id="satelliteCenter" near="0.1" far="5000" angle="22.9">
            <from x="3" y="1" z="3" />
            <to x="0" y="0" z="0" />
        </perspective>

        <perspective id="satelliteBottom" near="0.1" far="5000" angle="22.9">
            <from x="3" y="-10" z="3" />
            <to x="0" y="0" z="0" />
        </perspective>

        <ortho id="orthoSatellite" near="0.1" far="5000" left="-10" right="10" top="5" bottom="-5" >
            <from x="30" y="30" z="30" />
            <to x="0" y="0" z="0" />
            <up x="0" y="1" z="0" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.025" g="0.025" b="0.025" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="sunlight" enabled="1">
            <location x="230" y="35" z="3" w="1.0" />
            <ambient r="0.05" g="0.05" b="0.05" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.0" quadratic="0.0" />
        </omni>

        <omni id="test" enabled="1">
            <location x="5" y="5" z="3" w="1.0" />
            <ambient r="0.05" g="0.05" b="0.05" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.0" quadratic="0.0" />
        </omni>
        <spot id="spotlight" enabled="0" angle="20" exponent="3">
            <location x="0.5" y="1.65" z="0.0" w="1.0"/>
            <target x="1.4" y="3.85" z="0.0" />
            <ambient r="0.015" g="0.015" b="0.015" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0.0" linear="0.0" quadratic="1.0" />
        </spot>
        <omni id="spaceshiplight" enabled="0">
            <location x="0" y="0" z="0" w="1.0" />
            <ambient r="0.05" g="0.1" b="0.15" a="1.0" />
            <diffuse r="0.1" g="0.2" b="0.25" a="1.0" />
            <specular r="0.1" g="0.4" b="0.5" a="1.0" />
            <attenuation constant="0.0" linear="1.0" quadratic="0.0" />
        </omni>
    </lights>

    <textures>
        <texture id="earthDayTexture" file="scenes/images/space/earth_day.jpg" />
        <texture id="moonTexture" file="scenes/images/space/moon.jpg" />
        <texture id="sunTexture" file="scenes/images/space/sun.jpg" />
        <texture id="solarPanelTexture" file="scenes/images/space/solar_panel.jpg" />
        <texture id="whiteMetalTexture" file="scenes/images/space/white_metal.jpg" />
        <texture id="metalTilesTexture" file="scenes/images/space/metal_tiles.jpg" />
        <texture id="spaceshipBodyTexture" file="scenes/images/space/spaceship_body.jpg" />
        <texture id="cubemapPositiveXTexture" file="scenes/images/space/stars/px.jpg" />
        <texture id="cubemapNegativeXTexture" file="scenes/images/space/stars/nx.jpg" />
        <texture id="cubemapPositiveYTexture" file="scenes/images/space/stars/py.jpg" />
        <texture id="cubemapNegativeYTexture" file="scenes/images/space/stars/ny.jpg" />
        <texture id="cubemapPositiveZTexture" file="scenes/images/space/stars/pz.jpg" />
        <texture id="cubemapNegativeZTexture" file="scenes/images/space/stars/nz.jpg" />
    </textures>

    <materials>
        <material id="defaultMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="cubemapMaterial" shininess="1">
            <emission r="0.4" g="0.4" b="0.4" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="reflectiveMaterial" shininess="0.5">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.7" g="0.7" b="0.7" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
        <material id="darkMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1" g="1" b="1" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
        </material>
        <material id="planetMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="sunMaterial" shininess="1">
            <emission r="1.0" g="1.0" b="0.4" a="1.0" />
            <ambient r="1.0" g="1.0" b="0.3" a="1.0" />
            <diffuse r="1.0" g="1.0" b="0.3" a="1.0" />
            <specular r="1.0" g="1.0" b="0.3" a="1.0" />
        </material>

        <!-- Non-standard materials (press M) -->
        <material id="brownSpaceshipMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.862" g="0.408" b="0.286" a="1.0" />
            <diffuse r="0.862" g="0.408" b="0.286" a="1.0" />
            <specular r="0.862" g="0.408" b="0.286" a="1.0" />
        </material>
        <material id="shinySpaceshipMaterial" shininess="0.8">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.9" g="0.758" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.843" b="0.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        <material id="redSpaceshipMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.8" g="0.1" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.2" b="0.0" a="1.0" />
            <specular r="1.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="greenSpaceshipMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.1" g="0.8" b="0.0" a="1.0" />
            <diffuse r="0.2" g="1.0" b="0.0" a="1.0" />
            <specular r="0.0" g="1.0" b="0.0" a="1.0" />
        </material>
        <material id="cyanSpaceshipMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.1" g="0.8" b="0.8" a="1.0" />
            <diffuse r="0.2" g="1.0" b="1.0" a="1.0" />
            <specular r="0.0" g="1.0" b="1.0" a="1.0" />
        </material>
        <material id="yellowSpaceshipMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="0.8" a="1.0" />
            <diffuse r="1.0" g="1.0" b="0.2" a="1.0" />
            <specular r="1.0" g="1.0" b="0.0" a="1.0" />
        </material>

        <material id="goldenReflectiveMaterial" shininess="0.4">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.9" g="0.758" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.843" b="0.0" a="1.0" />
            <specular r="1.0" g="0.95" b="0.7" a="1.0" />
        </material>
        <material id="brownDarkMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.3" g="0.15" b="0.08" a="1.0" />
            <diffuse r="0.862" g="0.408" b="0.286" a="1.0" />
            <specular r="0.862" g="0.408" b="0.286" a="1.0" />
        </material>
        <material id="goldenDarkMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.7" g="0.558" b="0.0" a="1.0" />
            <diffuse r="0.9" g="0.843" b="0.0" a="1.0" />
            <specular r="0.9" g="0.95" b="0.7" a="1.0" />
        </material>

        <material id="redCubemapMaterial" shininess="1">
            <emission r="0.6" g="0.4" b="0.4" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="halfSpinZ">
            <rotate axis="z" angle="180" />
        </transformation>
        <transformation id="spacestationStemTubeTransformation">
            <translate x="0.15" y="0" z="0" />
            <rotate axis="y" angle="-90" />
            <scale x="8" y="0.15" z="0.15" />
        </transformation>
        <transformation id="sunTransformation">
            <translate x="230" y="35" z="3" />
            <scale x="4.5" y="4.5" z="4.5" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectanglePatch">
            <patch degree_u="1" parts_u="50" degree_v="1" parts_v="50">
                <controlpoint x="-0.5" y="-0.5" z="0" />
                <controlpoint x="-0.5" y="0.5" z="0" />
                <controlpoint x="0.5" y="-0.5" z="0" />
                <controlpoint x="0.5" y="0.5" z="0" />
            </patch>
        </primitive>
        <primitive id="tentInnerPatch">
            <patch degree_u="1" parts_u="50" degree_v="2" parts_v="50">
                <controlpoint x="-0.5" y="0" z="0.5" />
                <controlpoint x="-0.5" y="1" z="0" />
                <controlpoint x="-0.5" y="0" z="-0.5" />
                <controlpoint x="0.5" y="0" z="0.5" />
                <controlpoint x="0.5" y="1" z="0" />
                <controlpoint x="0.5" y="0" z="-0.5" />
            </patch>
        </primitive>
        <primitive id="tentOuterPatch">
            <patch degree_u="1" parts_u="50" degree_v="2" parts_v="50">
                <controlpoint x="-0.5" y="0" z="-0.5" />
                <controlpoint x="-0.5" y="1" z="0" />
                <controlpoint x="-0.5" y="0" z="0.5" />
                <controlpoint x="0.5" y="0" z="-0.5" />
                <controlpoint x="0.5" y="1" z="0" />
                <controlpoint x="0.5" y="0" z="0.5" />
            </patch>
        </primitive>
        <primitive id="semicirclePatch">
            <patch degree_u="1" parts_u="50" degree_v="3" parts_v="50">
                <controlpoint x="0.75" y="0" z="0" />
                <controlpoint x="0.75" y="0" z="1" />
                <controlpoint x="-0.75" y="0" z="1" />
                <controlpoint x="-0.75" y="0" z="0" />
                <controlpoint x="0" y="0" z="0" />
                <controlpoint x="0" y="0" z="0" />
                <controlpoint x="0" y="0" z="0" />
                <controlpoint x="0" y="0" z="0" />
            </patch>
        </primitive>
        <primitive id="barrelSidePatch">
            <patch degree_u="2" parts_u="50" degree_v="3" parts_v="50">
                <controlpoint x="0.75" y="-1" z="0" />
                <controlpoint x="0.75" y="-1" z="1" />
                <controlpoint x="-0.75" y="-1" z="1" />
                <controlpoint x="-0.75" y="-1" z="0" />
                <controlpoint x="1.125" y="0" z="0" />
                <controlpoint x="1.125" y="0" z="1.5" />
                <controlpoint x="-1.125" y="0" z="1.5" />
                <controlpoint x="-1.125" y="0" z="0" />
                <controlpoint x="0.75" y="1" z="0" />
                <controlpoint x="0.75" y="1" z="1" />
                <controlpoint x="-0.75" y="1" z="1" />
                <controlpoint x="-0.75" y="1" z="0" />
            </patch>
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="defaultMaterial" />
            </materials>
            <texture id="metalTilesTexture" length_s="1.0" length_t="1.0" />
            <children>
                <!--<componentref id="rectangle" />-->
                <!--<componentref id="tent" />-->
                <!--<componentref id="circle" />-->
                <componentref id="barrel" />
            </children>
        </component>
        <component id="rectangle">
            <transformation>
                <scale x="40" y="40" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="rectanglePatch" />
            </children>
        </component>
        <component id="tent">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="tentInnerPatch" />
                <primitiveref id="tentOuterPatch" />
            </children>
        </component>
        <component id="circle">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="semicirclePatch" />
                <componentref id="semicircleComplement" />
            </children>
        </component>
        <component id="semicircleComplement">
            <transformation>
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="semicirclePatch" />
            </children>
        </component>
        <component id="barrel">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="barrelSidePatch" />
                <componentref id="barrelSideComplement" />
                <componentref id="barrelTop" />
                <componentref id="barrelBottom" /> 
            </children>
        </component>
        <component id="barrelSideComplement">
            <transformation>
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="barrelSidePatch" />
            </children>
        </component>
        <component id="barrelTop">
            <transformation>
                <translate x="0" y="1" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="circle" />
            </children>
        </component>
        <component id="barrelBottom">
            <transformation>
                <translate x="0" y="-1" z="0" />
                <rotate axis="x" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="circle" />
            </children>
        </component>
    </components>
</sxs>